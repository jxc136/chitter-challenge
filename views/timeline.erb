<html>
  <link rel="stylesheet" href="/styles.css"/>
  <%# If logged in %>

  <head>
  
  <% if session[:user_id] %>

    <div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/peep/new" action="/peep/new" method="get">New Peep</a>
    </div>


    <form action="/logout" method="post">
    <p>Sign Out:
    <button type="submit" class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-log-out"></span> Log out
    </button> </p> </form>

  <% else %>

    <div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/login">Log in</a>
    <a href="account/new">Sign Up</a>
    </div>
  <% end %>

  <div class="header">
  <h1>Chitter Timeline</h1> 
  </div>
  
  

    <div class ="peep_card"> 
    <% @timeline.each do |message| %>
       <div class ="peep_content"> 
          <%= "Peep from: #{@user_repo.find_by_id(message.user_id).username}" %>  
          <p> <%= "Time: #{message.time_posted}" %> </p>
          <p> <%= "#{message.content}" %></p>
       </div>
    <% end %>
    </div>

  
</html>